# Declare stack frame locations
register data_stack_pointer: u8 @ 0x0000;

register output: u8 @ 0x0200;

# Initialize the stack
org 0xE000;
data_stack_pointer = 3;
main();

def halt(): void
    goto halt;
end

def main(): void
    var counter: u8 = 0;

    while counter < 10 do
        counter = counter + 1;
    end

    output = counter; # Should be 10
    goto halt;
end